<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>PetServlet</servlet-name>
        <servlet-class>org.example.servlet.PetServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PetServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PetListServlet</servlet-name>
        <servlet-class>org.example.servlet.PetListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PetListServlet</servlet-name>
        <url-pattern>/petList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddPetServlet</servlet-name>
        <servlet-class>org.example.servlet.AddPetServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddPetServlet</servlet-name>
        <url-pattern>/addPet</url-pattern>
    </servlet-mapping>

</web-app>
